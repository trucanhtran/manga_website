<%= render 'manga/header' %>

<div class= "slider">
  <div class="slider-title">
    <%= @category.name %>
  </div>
  <div class="slider-content">
    <div>
      <% @products.each do |product| %>
        <%= link_to image_tag(product.thumbnail_url), show_product_path(product.id) %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'manga/footer' %>
