<div id="id_header">
  <%= render 'header' %>
</div>
<div id="id_slider">
 <% @products.each do |product| %>
 <div class="thumbnail">
    <%= image_tag product.thumbnail_url %>
 </div>
 <% end %>

</div>
<div id="id_content">
  <div class="hot-products">
    <div class="title blue">Hot</div>
    <div class="products">
      <div class="product-card blue">
        <%= image_tag "https://cdn.beeng.org/mangas/2021/07/05/07/nusunde-lilith.jpg"%>
        <div class="product-information">
          <div class="product-name">
            <%= link_to "Nusunde Lilith", "#" %>
          </div>
          <div class="product-chapters">
            <%= link_to "Chapter 12", "#" %>
          </div>
          <div class="product-stars">
            <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
            <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
            <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
            <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
            <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
          </div>
        </div>
      </div>
    </div>
    <div class="btn">
      <%= link_to "Xem thêm", "#" %>
    </div>
  </div>
  <div class="new-products">
    <div class="title blue">Mới Nhất</div>
    <div class="btn">
      <%= link_to "Xem thêm", "#" %>
    </div>
  </div>
</div>
<div id="id_footer">
  <div class="logo">
    <img src="https://beeng.org/images/logo-beeng.png" alt="">
  </div>
  <div class="contact">
    <p> Liên hệ: beeng.net@gmail.com</p>
    <p>Copyright © 2020 beeng.org - All rights reserved</p>
  </div>
</div>
