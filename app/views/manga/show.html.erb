<!--Header!-->
<div class="header">
 <%= render 'header' %>
</div>

<div class="product-details">
  <%= image_tag @product.thumbnail_url, class:"product-img"%>
  <div class="product-description">
    <h3><%= @product.title %></h3>
    <p><%= @product.short_description %></p>
    <div class="product-stars">
      <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
      <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
      <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
      <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
      <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
    </div>
    <div>(Hãy tham gia bình chọn cho truyện bạn nhé!)</div>
    <div class="more-info">
      <div class="bold">Nhóm dịch:</div>
      <div>Đang cập nhật...</div>
    </div>
    <div class="more-info">
      <div class="bold">Tác giả:</div>
      <div>Đang cập nhật...</div>
    </div>
    <div class="more-info">
      <div class="bold">Lượt xem:</div>
      <div><%= @product.current_view_counts %></div>
    </div>
    <div class="more-info">
      <div class="btn-follow" onclick = "showAlert()">Theo dõi</div>
      <div onclick = "showAlert()" class="btn-facebook" >
       <%= image_tag "https://cdn.iconscout.com/icon/free/png-256/bookmark-1754138-1493251.png" %>
      Lưu vào facebook
      </div>
    </div>
  </div>
</div>
<div class="btn-category btn">
  <%= link_to @product.category.name %>
</div>
<div class="list-chapters">
  <div class="title"> Danh sách chương</div>
  <div class="chapters">
    <% @chapters.each do |chap| %>
      <div class="chapter">
        <div>
          <div class="chap-title">
            <%= link_to chap.title, show_chapter_path(chap.id) %>
          </div>
          <div class="blue small-text">
            <%= chap.updated_at %>
          </div>
        </div>
        <div>
          <%= image_tag "https://cdn.iconscout.com/icon/free/png-256/bookmark-1754138-1493251.png" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="same-products">
  <div class="title"> Truyện tương tự</div>
  <div id="id_products_list" class="products">
   <% @products.each do |product| %>
      <div class="product-card blue">
        <%= link_to image_tag(product.thumbnail_url), show_product_path(product.id), class: 'product-image'%>
        <div class="product-information">
          <div class="product-name">
            <%= link_to product.title, show_product_path(product.id) %>
          </div>
          <div class="product-chapters">
            <%= link_to product.chapters.first.title, "#" %>
          </div>
          <div class="product-stars">
            <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
            <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
            <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
            <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
            <%= image_tag "https://emojigraph.org/media/google/star_2b50.png" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div id="id_product"><%= @product.id %></div>
<% if current_user.present? %>
  <div id="id_current_user"><%= current_user.id %></div>
<% end %>
<div class="blue title">Bình luận</div>
<div class="place-comment">
  <textarea id="id_comment" cols= "150" rows="10" placeholder="Nhập bình luận..."></textarea>
  <div class="btn" id="id_send_comment">Send</div>
</div>
<div>
  <div id="id_list_comment">
  </div>
  <% @comments.each do |comment| %>
    <div class="place-show-comment">
      <div class="div-user blue"><%= comment.user.name %>: At <%= comment.updated_at %></div>
      <div class="div-comment"><%= comment.content %></div>
    </div>
  <% end %>
</div>
<!--Footer!-->
 <%= render 'footer' %>

 <script>
  function showAlert(){
  alert("Tính năng này chưa mở!")
}

 </script>
